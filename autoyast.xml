            <package>pnpm</package>
        </packages>
    </software>

    <services>
        <runlevel config:type="list">
            <service>
                <name>NetworkManager</name>
                <enabled config:type="boolean">true</enabled>
            </service>
            <service>
                <name>ufw</name>
                <enabled config:type="boolean">true</enabled>
            </service>
        </runlevel>
    </services>
</profile>
